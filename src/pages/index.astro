        float: right;

    }

    div {
        background: none;
        text-align: left;

    }

    ul {
        padding-left: 20px;
        text-align: left;
    }

    footer {

        background-color: #6faf69e4;
        background-image: url('../../public/divbackround5.png');

        background-size: auto 2000px;

        background-repeat: repeat-y;

